<%= form_tag project_issues_path(@project), method: :get, class: "form-inline" do %>
  <div class="form-group">
    <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search by subject or reference" %>
  </div>
  <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>
